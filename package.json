{
    "name":  "langm",
    "version":  "0.1.4",
    "description":  "基于能力的多语言运行时管理器",
    "type":  "module",
    "main":  "src/index.ts",
    "bin":  {
                "langm":  "src/index.ts"
            },
    "scripts":  {
                    "start":  "bun run src/index.ts",
                    "test":  "bun test",
                    "build":  "bun build src/index.ts --compile --outfile langm",
                    "release":  "powershell -ExecutionPolicy Bypass -File scripts/release.ps1"
                },
    "devDependencies":  {
                            "@types/bun":  "latest",
                            "@types/prompts":  "^2.4.9",
                            "fast-check":  "^3.22.0"
                        },
    "dependencies":  {
                         "prompts":  "^2.4.2"
                     }
}
